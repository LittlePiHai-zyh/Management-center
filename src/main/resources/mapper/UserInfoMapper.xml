<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lsw.management.admin.mapper.UserInfoMapper">

    <resultMap id="BaseResultMap" type="com.lsw.management.admin.model.po.user.UserInfo">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="accountId" column="account_id" jdbcType="VARCHAR"/>
        <result property="deleted" column="deleted" jdbcType="INTEGER"/>
        <result property="gender" column="gender" jdbcType="INTEGER"/>
        <result property="birthday" column="birthday" jdbcType="TIMESTAMP"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="mobile" column="mobile" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,`name`,account_id,
        deleted,`gender`,birthday,
        create_time,update_time,mobile
    </sql>
    <select id="selectUserInfo" resultType="com.lsw.management.admin.model.vo.user.UserVo">
        SELECT a.id,
               a.username,
               u.name,
               a.roles,
               a.state,
               u.gender,
               u.birthday,
               u.mobile,
               u.email
        FROM user_account a
                 LEFT JOIN user_info u ON a.id = u.account_id
        WHERE a.id=#{id}
    </select>
    <select id="listAll" resultType="com.lsw.management.admin.model.vo.user.UserVo">
        SELECT
            a.id,
            a.username,
            a.state,
            a.roles ,
            u.name,
            u.gender,
            u.mobile,
            u.email,
            u.type,
            u.professional
        FROM
            user_account a
                LEFT JOIN user_info u on u.account_id=a.id
        <where>
            a.deleted=0
            <if test="queryDto.name != null and queryDto.name!=''">
                AND u.name LIKE concat('%',#{queryDto.name}, '%')
            </if>
            <if test="queryDto.username!=null and queryDto.username!=''">
                AND a.username LIKE concat('%',#{queryDto.username}, '%')
            </if>
            <if test="queryDto.professional!= null and queryDto.professional!= ''">
                AND u.professional = #{queryDto.professional}
            </if>
            <if test="queryDto.type!= null and queryDto.type!= ''">
                AND u.type LIKE concat('%',#{queryDto.type}, '%')
            </if>
        </where>
    </select>
</mapper>
