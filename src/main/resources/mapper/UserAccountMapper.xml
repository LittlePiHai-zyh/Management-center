<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhangyh.management.admin.mapper.UserAccountMapper">

    <resultMap id="BaseResultMap" type="com.zhangyh.management.admin.model.po.UserAccount">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="username" column="username" jdbcType="VARCHAR"/>
            <result property="password" column="password" jdbcType="VARCHAR"/>
            <result property="deleted" column="deleted" jdbcType="INTEGER"/>
            <result property="state" column="state" jdbcType="INTEGER"/>
            <result property="expiredTime" column="expired_time" jdbcType="TIMESTAMP"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="roles" column="roles" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,username,password,
        deleted,`state`,expired_time,
        create_time,update_time,roles
    </sql>

    <select id="selectInfoPageList" resultType="com.zhangyh.management.admin.model.vo.UserVo">
        SELECT a.id,
               a.username,
               u.NAME,
               a.roles,
               a.state,
               u.gender,
               u.birthday,
               u.mobile,
               u.email
        FROM user_account a
                 LEFT JOIN user_info u ON a.id = u.account_id
    </select>

</mapper>
